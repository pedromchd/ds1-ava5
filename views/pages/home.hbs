<main>
    <a href="/new">Adicionar livro</a>
    <h2>Meus livros:</h2>
    {{#if results}}
    <table>
        <tr>
            <th>Título</th>
            <th>Ano</th>
            <th>Autor</th>
            <th>Editora</th>
            <th>Opções</th>
        </tr>
        {{#each results}}
        <tr>
            <td>{{titulo}}</td>
            <td>{{ano}}</td>
            <td>{{autor}}</td>
            <td>{{editora}}</td>
            <td>
                <a href="/edit/{{id}}">Editar</a>
                <a href="/delete/{{id}}" onclick="return confirm('Deletar livro?')">Deletar</a>
            </td>
        </tr>
        {{/each}}
    </table>
    {{else}}
    <p>Sem resultados.</p>
    {{/if}}
</main>
