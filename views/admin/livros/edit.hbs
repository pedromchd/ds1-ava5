<main>
    <a href="/admin/">Página inicial</a>
    <h2>Editar livro:</h2>
    {{#with result}}
    <form action="/admin/livro/edit/{{id}}" method="post">
        <label for="titulo">Título:</label>
        <input type="text" name="titulo" id="titulo" value="{{titulo}}">
        <label for="ano">Ano:</label>
        <input type="number" name="ano" id="ano" value="{{ano}}">
        <label for="autor">Autor:</label>
        <input type="text" name="autor" id="autor" value="{{autor}}">
        <label for="editora">Editora:</label>
        <input type="text" name="editora" id="editora" value="{{editora}}">
        <label for="quantidade">Quantidade:</label>
        <input type="number" name="quantidade" id="quantidade" value="{{quantidade}}">
        <button type="submit">Enviar</button>
    </form>
    {{/with}}
</main>
