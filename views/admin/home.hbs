<main>
    {{#with session.user}}
    <p>Logado como: {{nome}}</p>
    <a href="/logout">Logout</a>
    {{else}}
    <a href="/login">Fazer login</a>
    {{/with}}
    <a href="/admin/new">Adicionar livro</a>
    <h2>Meus livros:</h2>
    {{#if results}}
    <table>
        <tr>
            <th>#</th>
            <th>Título</th>
            <th>Ano</th>
            <th>Autor</th>
            <th>Editora</th>
            <th>Qnt.</th>
            <th>Opções</th>
        </tr>
        {{#each results}}
        <tr>
            <td id="{{id}}">{{id}}</td>
            <td>{{titulo}}</td>
            <td>{{ano}}</td>
            <td>{{autor}}</td>
            <td>{{editora}}</td>
            <td>{{quantidade}}</td>
            <td>
                <a href="/admin/edit/{{id}}">Editar</a>
                <a href="/admin/delete/{{id}}" onclick="return confirm('Deletar livro?')">Deletar</a>
            </td>
        </tr>
        {{/each}}
    </table>
    {{else}}
    <p>Não há livros na sua biblioteca.</p>
    {{/if}}
    {{#with success}}
    <p>{{this}}</p>
    {{/with}}
</main>
